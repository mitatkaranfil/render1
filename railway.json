{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "simple-backend/nixpacks.toml"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "cd simple-backend && node index.js",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  }
}